{% extends '/Layouts/authenticated-layout.html' %}

{% block page %}

<h1>Listas dos produtos</h1>

<div class="d-flex flex-column gap-3">
    {% for product in products %}
    <div class="d-flex gap-2 align-items-center border rounded">
        <div class="d-flex rounded" style="width: 50px; height: 50px;">
            <img class="object-fit-cover rounded" src="./Uploads/products{{ product["path"] }}" alt="{{ product["product"]["name"] }}" width="50" height="50">
        </div>
        <div class="d-flex flex-column w-100">
            <span>{{ product["product"]["name"] }}</span>
            <span>{{ product["product"]["description"] }}</span>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}