{% extends '/Layouts/authentication-layout.html' %}

{% block head %}
<title>Login</title>
{% endblock %}

{% block page %}
<main class="vh-100 d-flex justify-content-center align-items-center">
    <form id="form" class="d-flex flex-column px-3 py-5 gap-4 rounded-3">
        <p class="text-center h5">Entrar em sua conta</p>

        <div>
            <label class="form-label" for="login">Email</label>
            <input class="form-control" id="email" type="text" name="email">
        </div>
        <div>
            <label class="form-label" for="password">Senha</label>
            <input class="form-control" id="password" type="password" name="password">
        </div>
        <div class="d-flex justify-content-end">
            <a class="small text-muted" href="/forget-password">Esqueci Minha Senha</a>
        </div>

        <button class="btn btn-primary" type="submit">Entrar</button>

        <span class="text-center small">NÃ£o tem uma conta?
            <a class="text-primary-emphasis" href="/register">Clique aqui!</a>
        </span>
    </form>
</main>

<script src="/js/login.js"></script>
{% endblock %}