{% extends "Layouts/authenticated-layout.html" %}

{% block head %}
<link rel="stylesheet" href="/css/add-product.css">
{% endblock %}

{% block page %}

<h1>Adicionar um novo produto</h1>

<ul class="breadcrumbs">
    <li class="breadcrumb-item">
        <a href="/">
            Inicio
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="/">
            Produtos
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="#" class="breadcrumb-item-active">
            Adicionar produtos
        </a>
    </li>
</ul>

<form id="form" class="d-flex flex-column gap-3">
    <div class="d-flex gap-4">
        <div class="w-50 d-flex flex-column gap-4">
            <div>
                <label class="form-label" for="name">Nome</label>
                <input class="form-control" id="name" type="text" name="name">
            </div>
            <div>
                <label class="form-label" for="price">Preço</label>
                <input class="form-control" id="price" type="text" step="0.01" name="price">
            </div>
        </div>
        <div class="d-flex flex-column w-50 gap-2">
            <span>Fazer upload da imagem</span>
            <label class="form-control d-flex flex-column bg-transparent rounded" for="images">
                <span class="text-center" for="images">
                    <i class="fa fa-image" aria-hidden="true"></i> Clique para selecionar uma imagem.
                </span>
                <span class="text-center" id="image-name"></span>
                <input type="file" id="images" hidden>
            </label>
            <div class="gap-1">
                <label class="form-label" for="category">Categorias</label>
                <div class="d-flex gap-2" id="selectedCategories"></div>
            </div>
            <div class="d-flex align-items-end h-100 mt-1">
                <select class="form-select" name="categories" id="categories" multiple>
                    {% for category in categories %}
                    <option value="{{ category["name"] }}">{{ category["name"] }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div>
        <label class="form-label" for="description">Descrição</label>
        <textarea class="form-control" id="description" type="text" name="description"></textarea>
    </div>
    <div class="w-100 d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>
</form>

<script src="/js/add-product.js"></script>
{% endblock %}